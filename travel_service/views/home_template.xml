<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="home_template" name="Home Page" inherit_id="website.homepage">
        <xpath expr="//div[@id='wrap']" position="replace">
            <div id="wrap">
                <!-- Hero Section -->
                <section class="homepage-hero" style="
                        background: linear-gradient(to bottom, rgba(0, 123, 255, 0.9), rgba(0, 123, 255, 0.7)), url('/path/to/your/hero-image.jpg');
                        background-size: cover;
                        background-position: center;
                        color: white;
                        text-align: center;
                        padding: 120px 20px;">
                    <div class="container">
                        <h1 style="
                                font-size: 4rem;
                                font-weight: bold;
                                text-shadow: 0 4px 8px rgba(0, 0, 0, 0.7);">
                            Your Journey Begins Here
                        </h1>
                        <p style="
                                font-size: 1.8rem;
                                margin-top: 20px;
                                text-shadow: 0 2px 6px rgba(0, 0, 0, 0.5);">
                            Seamlessly book hotels and flights for your next adventure.
                        </p>
                        <div style="margin-top: 40px;">
                            <a href="/hotel/booking" class="btn btn-primary btn-lg" style="
                                    background-color: #0056b3;
                                    border: none;
                                    padding: 15px 40px;
                                    font-size: 1.2rem;">
                                Hotel Booking
                            </a>
                            <a href="/flight/booking" class="btn btn-secondary btn-lg" style="
                                    background-color: #ffc107;
                                    color: black;
                                    border: none;
                                    padding: 15px 40px;
                                    font-size: 1.2rem;">
                                Flight Booking
                            </a>
                        </div>
                    </div>
                </section>

                <!-- Features Section -->
                <section class="homepage-features" style="
                        padding: 60px 20px;
                        background-color: #f5f7fa;">
                    <div class="container">
                        <h2 class="text-center" style="color: #0056b3; margin-bottom: 40px; font-weight: bold;">
                            Why Choose Us
                        </h2>
                        <div class="row">
                           available Flights here
                        </div>
                    </div>
                </section>
                <!-- Available Flights Section -->
               <section>
                    <div class="container">
                        <h1 style="
                                font-size: 4rem;
                                font-weight: bold;
                                text-shadow: 0 4px 8px rgba(0, 0, 0, 0.7);">
                            Your Journey Begins Here
                        </h1>
                   </div>
               </section>

                <!-- Booking Options Section -->
                <section class="homepage-booking-options" style="
                        padding: 80px 20px;
                        background-color: #ffffff;">
                    <div class="container">
                        <h2 class="text-center" style="margin-bottom: 40px; color: #0056b3; font-weight: bold;">
                            Plan Your Trip
                        </h2>
                        <div class="row justify-content-center">
                            <div class="col-md-5 text-center">
                                <div style="
                                        border: 1px solid #ddd;
                                        border-radius: 10px;
                                        padding: 30px;
                                        background-color: #f9f9f9;
                                        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
                                    <h3>Hotel Booking</h3>
                                    <p>Book the perfect stay from our vast range of hotels.</p>
                                    <a href="/hotel/booking" class="btn btn-primary" style="
                                            background-color: #0056b3;
                                            border: none;
                                            padding: 10px 30px;">
                                        Book Now
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-5 text-center">
                                <div style="
                                        border: 1px solid #ddd;
                                        border-radius: 10px;
                                        padding: 30px;
                                        background-color: #f9f9f9;
                                        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
                                    <h3>Flight Booking</h3>
                                    <p>Find and book the best flights at competitive prices.</p>
                                    <a href="/flight/booking" class="btn btn-secondary" style="
                                            background-color: #ffc107;
                                            color: black;
                                            border: none;
                                            padding: 10px 30px;">
                                        Book Now
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

            </div>
        </xpath>
    </template>
</odoo>
